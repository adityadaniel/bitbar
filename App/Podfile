  pod 'SwiftyTimer'
  pod 'DateTools'
  pod 'Cent'
  pod 'AsyncSwift'
  pod 'Files'
  pod 'Hue'
  pod 'SwiftyJSON'
  pod 'SwiftyUserDefaults'
  pod 'SwiftTryCatch', git: 'https://github.com/oleander/SwiftTryCatch.git'
  # TODO: Re-implement https://github.com/matryer/bitbar/pull/338/commits/12ceb090bf080232a6415f0f0a69c669e6001f39
