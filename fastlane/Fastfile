fastlane_version "2.26.1"
default_platform :mac

platform :mac do
  before_all do
    cocoapods repo_update: true
    # update_project_codesigning(
    #   path: "BitBar.xcodeproj",
    #   use_automatic_signing: true,
    #   team_id: "8Z44P9V4VF"
    # )
  end

  desc "Runs all the tests"
  lane :test do
    scan scheme: "BitBar", clean: true
  end

  lane :import_keys do
    # security create-keychain -p travis $(KEYCHAIN)
    # # security set-key-partition-list -S apple-tool:,apple: -s -k travis $(KEYCHAIN)
    # security default-keychain -s $(KEYCHAIN)
    # security unlock-keychain -p travis $(KEYCHAIN)
    # security set-keychain-settings -t 3600 -u $(KEYCHAIN)
    create_keychain(name: "travis", password: "travis",
      default_keychain: true, unlock: true, timeout: 3600, add_to_search_list: true)
    #  import_certificate(certificate_path: "Resources/bitbar.cer",
    #   keychain_name: "travis")
    #  import_certificate(certificate_path: "bitbar.p12",
    #   certificate_password: ENV["CERTPWD"], keychain_name: "travis")
      sh "security import bitbar.p12 -A -k travis -P '#{ENV["CERTPWD"]}' -T /usr/bin/codesign"
      sh "security import Resources/bitbar.cer -A -k travis -T /usr/bin/codesign"

  end

  desc "Deploy a new version to the App Store"
  lane :build do
    gym
    zip path: "BitBar.zip"
  end

  lane :lint do
    swiftlint(mode: :lint)
  end

  lane :fix do
    swiftlint mode: :autocorrect
  end
end
